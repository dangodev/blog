{
  "name": "blog",
  "private": true,
  "version": "0.0.1",
  "description": "Stencil App Starter",
  "license": "MIT",
  "scripts": {
    "build": "mkdir -p public && npm run build:blog && npm run build:rss && stencil build --prerender",
    "build:blog": "node scripts/blog",
    "build:blog:watch": "nodemon --watch ./data --exec 'npm run build:blog' -e md",
    "build:rss": "node scripts/rss",
    "dev": "stencil build --dev --watch --serve",
    "generate": "stencil generate",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint --ext .js,.ts,.tsx src",
    "start": "concurrently 'npm run build:blog:watch' 'npm run dev'",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "watch": {
    "posts": "data/*.md"
  },
  "dependencies": {
    "@stencil/core": "^1.5.3",
    "@stencil/postcss": "^1.0.1",
    "@stencil/router": "^1.0.1",
    "feed": "^4.0.0",
    "postcss": "^7.0.18",
    "postcss-preset-env": "^6.7.0",
    "remark": "^11.0.1",
    "remark-extract-frontmatter": "^2.0.0",
    "remark-frontmatter": "^1.3.2",
    "remark-html": "^10.0.0",
    "remark-preset-lint-recommended": "^3.0.3",
    "roman-numeral": "^0.2.6",
    "yaml": "^1.7.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "concurrently": "^4.1.2",
    "eslint": "^6.5.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1"
  }
}
