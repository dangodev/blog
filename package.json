{
  "name": "blog",
  "private": true,
  "version": "0.0.1",
  "description": "Stencil App Starter",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:blog && stencil build --prerender && npm run build:rss",
    "build:blog": "node scripts/blog",
    "build:rss": "rm -rf www/atom.xml && rm -rf www/feed.json && rm -rf www/feed.rss && node scripts/rss",
    "dev": "stencil build --dev --watch --serve",
    "generate": "stencil generate",
    "lint": "npm run lint:js & npm run lint:css",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint --ext .js,.ts,.tsx src",
    "start": "nodemon --watch data --exec 'npm run build:blog && npm run dev' -e md",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "watch": {
    "posts": "data/*.md"
  },
  "dependencies": {
    "@stencil/core": "^1.8.8",
    "@stencil/postcss": "^1.0.1",
    "@stencil/router": "^1.0.1",
    "feed": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "remark": "^11.0.2",
    "remark-autolink-headings": "^5.2.1",
    "remark-extract-frontmatter": "^2.0.1",
    "remark-frontmatter": "^1.3.2",
    "remark-highlight.js": "^5.2.0",
    "remark-html": "^10.0.0",
    "remark-preset-lint-recommended": "^3.0.3",
    "remark-slug": "^5.1.2",
    "yaml": "^1.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "nodemon": "^2.0.2",
    "postcss": "^7.0.26",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.0.0"
  }
}
